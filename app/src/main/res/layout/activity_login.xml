    \/ Текст для пароля
    <ImageView
        android:id="@+id/imageViewPasswordBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewNameTextBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41sp"
        android:layout_marginTop="18sp"
        android:layout_marginEnd="41sp"
        android:minHeight="54sp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/standart_edit_text" />

    <EditText
        android:id="@+id/editTextTextPasswordAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewPasswordBackground"
        android:layout_alignBottom="@+id/imageViewPasswordBackground"
        android:layout_marginLeft="99sp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="55sp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/open_password"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:minHeight="48sp"
        android:singleLine="true"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewNameTextBackground"
        android:layout_marginLeft="61sp"
        android:layout_marginTop="33sp"
        app:srcCompat="@drawable/newpassicon" />
