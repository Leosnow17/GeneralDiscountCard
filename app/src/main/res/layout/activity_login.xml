    \/ Кнопка регистрации

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPasswordBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72sp"
        android:layout_marginLeft="72sp"
        android:layout_marginTop="72sp"
        android:layout_marginEnd="72sp"
        android:layout_marginRight="72sp"
        android:background="@drawable/standart_button"
        android:elevation="6dp"
        android:fontFamily="@font/quicksand_regular"
        android:shadowColor="@color/black"
        android:stateListAnimator="@animator/button_elevation"
        android:text="Войти"
        android:translationZ="4dp" />
    /\ Кнопка регистрации

    \/ Текст под кнопкой

    <TextView
        android:id="@+id/textViewUnderRegistrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogin"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="9sp"
        android:text="Еще нет аккаунта?"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUnderRegistrationButton"
        android:layout_marginLeft="8sp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="Зарегистрироваться"
        android:textColor="@color/blue"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />
